pipeline {
    agent any
    tools {
        maven 'localMaven'  // same as Maven Name in global tool config in jenkins
    }
    stages{
        stage('Build'){
            steps {
                sh 'mvn clean package'
            }
            post {
                success {
                    echo 'Now Archiving...'
                    archiveArtifacts artifacts: '**/target/*.war'
                }
            }
        }
    }
}